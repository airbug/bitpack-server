{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources" : {
        "gulpRecipeDNSRecords": {
            "Type": "AWS::Route53::RecordSetGroup",
            "Properties": {
                "HostedZoneName": "gulprecipe.com.",
                "Comment": "DNS records for gulp-recipe.",
                "RecordSets": [
                    {
                        "Name": "gulprecipe.com.",
                        "Type": "A",
                        "TTL": "900",
                        "ResourceRecords": [
                            "192.168.0.1",
                            "192.168.0.2"
                        ]
                    }
                ]
            }
        },
        "bitrecipeDNSRecords": {
            "Type": "AWS::Route53::RecordSetGroup",
            "Properties": {
                "HostedZoneName": "bitrecipe.io.",
                "Comment": "DNS records for bitrecipe.",
                "RecordSets": [
                    {
                        "Name": "bitrecipe.io.",
                        "Type": "A",
                        "TTL": "900",
                        "ResourceRecords": [
                            "192.168.0.1",
                            "192.168.0.2"
                        ]
                    },
                    {
                        "Name": "edge.bitrecipe.io.",
                        "Type": "CNAME",
                        "TTL": "900",
                        "ResourceRecords": [
                            {
                                "Fn::GetAtt": [
                                    "recipeCloudfrontDistribution",
                                    "DomainName"
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        "bitrecipeBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "AccessControl": "PublicRead",
                "LoggingConfiguration": {
                    "DestinationBucketName": {
                        "Ref": "logsBucket"
                    },
                    "LogFilePrefix": "logs/bitrecipe/S3"
                }
            },
            "DeletionPolicy": "Retain"
        },
        "logsBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "AccessControl": "LogDeliveryWrite"
            },
            "DeletionPolicy": "Retain"
        },
        "rootRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "root",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": "*",
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "bitrecipeCloudfrontDistribution": {
            "Type": "AWS::CloudFront::Distribution",
            "Properties": {
                "DistributionConfig": {
                    "Origins": [
                        {
                            "DomainName": {
                                "Fn::GetAtt": [
                                    "bitrecipeBucket",
                                    "DomainName"
                                ]
                            },
                            "Id": "bitrecipeS3Origin",
                            "S3OriginConfig": {}
                        }
                    ],
                    "Enabled": "true",
                    "Comment": "bitrecipe cloudfront",
                    "Logging": {
                        "IncludeCookies": "false",
                        "Bucket": {
                            "Fn::GetAtt": [
                                "logsBucket",
                                "DomainName"
                            ]
                        },
                        "Prefix": "logs/bitrecipe/cloudfront"
                    },
                    "DefaultCacheBehavior": {
                        "AllowedMethods": [
                            "DELETE",
                            "GET",
                            "HEAD",
                            "OPTIONS",
                            "PATCH",
                            "POST",
                            "PUT"
                        ],
                        "TargetOriginId": "bitrecipeS3Origin",
                        "ForwardedValues": {
                            "QueryString": "false",
                            "Cookies": {
                                "Forward": "none"
                            }
                        },
                        "ViewerProtocolPolicy": "redirect-to-https"
                    },
                    "ViewerCertificate": {
                        "CloudFrontDefaultCertificate": true
                    }
                }
            }
        },
        "bitrecipeLoadBalancer": {
            "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
            "Properties": {
                "AvailabilityZones": [
                    "us-east-1a"
                ],
                "Listeners": [
                    {
                        "LoadBalancerPort": "80",
                        "InstancePort": "80",
                        "Protocol": "HTTP"
                    }
                ],
                "HealthCheck": {
                    "Target": "HTTP:80/",
                    "HealthyThreshold": "3",
                    "UnhealthyThreshold": "5",
                    "Interval": "30",
                    "Timeout": "5"
                }
            }
        }
    }
}
